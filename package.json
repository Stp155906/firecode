{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "firebase-admin": "^9.6.0",
    "lerna": "^4.0.0",
    "prettier": "2.2.1",
    "typescript": "4.2.4"
  },
  "scripts": {
    "build": "npx lerna run build",
    "format": "prettier --write \"./packages/**/{src,test}/**/*.{ts,tsx,json}\"",
    "format-check": "prettier --check \"./packages/**/{src,test}/**/*.{ts,tsx,json}\"",
    "lint": "npx eslint packages/**/{src,__tests__} --ext .js,.ts",
    "publish": "npx lerna publish from-git",
    "version": "npx lerna version"
  },
  "dependencies": {
    "@firecode/admin": "file:packages/admin"
  }
}
